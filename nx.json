{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "defaultProject": "@myparcel/vue-form-builder",
  "npmScope": "myparcel-vfb",
  "targetDefaults": {
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "outputs": ["{projectRoot}/lib"]
    },
    "build": {
      "dependsOn": ["^emit", "^build"],
      "outputs": ["{projectRoot}/lib"]
    },
    "serve": {
      "dependsOn": ["build:dev"],
      "outputs": ["{projectRoot}/lib"]
    },
    "test": {
      "inputs": ["{workspaceRoot}/packages/**/*"],
      "outputs": ["{workspaceRoot}/coverage"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "parallel": 10,
        "cacheableOperations": ["build", "build:dev", "test", "typecheck"]
      }
    }
  }
}
