{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "defaultProject": "@myparcel/vue-form-builder",
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/lib"
    ],
    "src": [
      "{projectRoot}/src",
      "{projectRoot}/package.json",
      "{projectRoot}/tsconfig.build.json",
      "{projectRoot}/tsconfig.json"
    ]
  },
  "targetDefaults": {
    "build:dev": {
      "dependsOn": [
        "^build:dev"
      ],
      "outputs": [
        "default"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "default"
      ]
    },
    "buildOnly": {
      "dependsOn": [
        "^buildOnly"
      ],
      "outputs": [
        "default"
      ]
    },
    "serve": {
      "dependsOn": [
        "build:dev"
      ],
      "outputs": [
        "default"
      ]
    },
    "test": {
      "inputs": [
        "{workspaceRoot}/packages/**/*"
      ],
      "outputs": [
        "{workspaceRoot}/coverage"
      ]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "parallel": 10,
        "cacheableOperations": [
          "build",
          "build:dev",
          "buildOnly",
          "test",
          "typecheck"
        ]
      }
    }
  }
}
