{
  "name": "@myparcel-vfb/monorepo",
  "version": "1.0.0-alpha.0",
  "private": true,
  "repository": "github:myparcelnl/vue-form-builder",
  "type": "module",
  "workspaces": [
    "libs/**",
    "apps/**"
  ],
  "scripts": {
    "build": "nx build --runner=cloud",
    "build:demo": "nx build demo --runner=cloud",
    "build:dev": "yarn build:dev:default --runner=cloud",
    "build:dev:default": "nx build:dev",
    "clean": "nx run-many --target=clean",
    "prepare": "is-ci || husky install",
    "serve": "yarn build:dev:default && npx concurrently yarn:serve:demo yarn:serve:watch",
    "serve:demo": "nx serve demo",
    "serve:watch": "nx run-many --target=watch",
    "test": "nx run-many --target=test --parallel --output-style=stream",
    "test:run": "nx run-many --target=test:run",
    "typecheck": "nx run-many --target=typecheck",
    "ws:clean": "cd $0 && rimraf lib",
    "ws:test": "cd $0 && vitest",
    "ws:test:run": "cd $0 && vitest run --coverage",
    "ws:tsup:build": "cd $0 && tsup-node src/index.ts --dts",
    "ws:tsup:build:dev": "cd $0 && tsup-node src/index.ts --sourcemap --dts",
    "ws:tsup:typecheck": "cd $0 && tsc src/index.ts --noEmit",
    "ws:tsup:watch": "cd $0 && tsup-node src/index.ts --sourcemap --dts --watch",
    "ws:vite:build": "cd $0 && vite build",
    "ws:vite:build:dev": "cd $0 && vite build --mode development",
    "ws:vite:typecheck": "cd $0 && vue-tsc --noEmit --declarationMap false -p tsconfig.build.json",
    "ws:vite:watch": "cd $0 && vite build --mode development --watch"
  },
  "lint-staged": {
    "*.{json,md}": "prettier --write",
    "*.{ts,vue}": "eslint --fix",
    "package.json": "npx sort-package-json"
  },
  "prettier": "@myparcel/prettier-config",
  "dependencies": {
    "@nrwl/nx-cloud": "^15.0.3"
  },
  "devDependencies": {
    "@monodeploy/plugin-github": "^0.8.0",
    "@myparcel-eslint/eslint-config-esnext": "^1.2.0",
    "@myparcel-eslint/eslint-config-node": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript-vue": "^1.2.0",
    "@nrwl/workspace": "^15.6.3",
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^18.11.18",
    "@vue/tsconfig": "^0.1.3",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.33.0",
    "eslint-plugin-sort-exports": "^0.8.0",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.0",
    "monodeploy": "^3.6.0",
    "nx": "^15.6.3",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2"
  },
  "packageManager": "yarn@3.2.4"
}
