{
  "name": "@myparcel-vfb/monorepo",
  "version": "1.0.0-alpha.0",
  "private": true,
  "repository": "github:myparcelnl/vue-form-builder",
  "type": "module",
  "workspaces": [
    "libs/**",
    "apps/**"
  ],
  "scripts": {
    "build": "nx build",
    "build:dev": "nx build:dev",
    "buildOnly": "nx buildOnly",
    "clean": "nx run-many --target=clean --exclude=.",
    "prepare": "is-ci || husky install",
    "serve": "yarn build:dev && npx concurrently yarn:serve:demo yarn:serve:watch",
    "serve:demo": "nx serve demo",
    "serve:watch": "nx run-many --target=watch --exclude=.",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "nx run-many --target=typecheck --exclude=.",
    "ws:clean": "cd $0 && rimraf lib",
    "ws:tsup:build": "cd $0 && tsup src/index.ts --dts",
    "ws:tsup:build:dev": "cd $0 && tsup src/index.ts --sourcemap --dts",
    "ws:tsup:buildOnly": "cd $0 && tsup src/index.ts",
    "ws:tsup:typecheck": "cd $0 && tsc src/index.ts --noEmit",
    "ws:tsup:watch": "cd $0 && tsup src/index.ts --sourcemap --dts --watch",
    "ws:vite:build": "cd $0 && vite build",
    "ws:vite:build:dev": "cd $0 && vite build --mode development",
    "ws:vite:buildOnly": "cd $0 && vite build",
    "ws:vite:typecheck": "cd $0 && vue-tsc --noEmit",
    "ws:vite:watch": "cd $0 && vite build --mode development --watch"
  },
  "lint-staged": {
    "*.{json,md}": "prettier --write",
    "*.{ts,vue}": "eslint --fix",
    "package.json": "npx sort-package-json"
  },
  "prettier": "@myparcel/prettier-config",
  "devDependencies": {
    "@monodeploy/plugin-github": "^0.7.0",
    "@myparcel-eslint/eslint-config-esnext": "^1.2.0",
    "@myparcel-eslint/eslint-config-node": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript-vue": "^1.2.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^18.11.10",
    "@vitest/coverage-c8": "^0.26.0",
    "@vue/test-utils": "^2.2.4",
    "@vue/tsconfig": "^0.1.3",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.28.0",
    "eslint-plugin-sort-exports": "^0.8.0",
    "happy-dom": "^8.1.1",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.0.4",
    "monodeploy": "^3.5.0",
    "nx": "^15.2.4",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vitest": "^0.26.0",
    "vue": "^3.2.45"
  },
  "packageManager": "yarn@3.2.4"
}
