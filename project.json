{
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage"
      },
      "inputs": [
        "{workspaceRoot}/package.json",
        "{workspaceRoot}/packages/**/package.json",
        "{workspaceRoot}/packages/**/src/**/*"
      ],
      "outputs": [
        "coverage"
      ]
    }
  }
}
