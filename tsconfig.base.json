{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "declarationMap": true,
    "importsNotUsedAsValues": "remove",
    "keyofStringsOnly": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "preserveValueImports": false,
    "target": "ESNext",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue"
  ],
  "exclude": [
    "packages/**/dist",
    "packages/**/lib",
    "packages/**/*.snap"
  ]
}
