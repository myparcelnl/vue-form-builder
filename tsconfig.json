{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@myparcel-vfb/build-*": [
        "./packages/build/*/src"
      ],
      "@myparcel-vfb/*": [
        "./packages/*/src"
      ],
      "@myparcel/vue-form-builder": [
        "./packages/core/src"
      ]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./**/*",
    "./**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "packages/**/dist",
    "packages/**/lib",
    "**/*.snap"
  ]
}
